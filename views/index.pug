extends layout

block layout-content
  div.content
    h1.banner Overview 🦄
    each val in data
      h4
        if val.edit
          a.btn.btn-sm.btn-primary.mr-2(href=val.edit)
            i.fas.fa-edit
        if val.delete
          a.btn.btn-sm.btn-danger.mr-2(href=val.delete)
            i.fas.fa-trash
        ="📝 "
        =val.subject
      p(style="font-size: .95em")=`📅 ${val.timestamp} - By: 🧙‍♂️ ${val.displayname}`
      div.mb-5.pl-2(style="border-left: darkgray solid 4px; max-height: 200px; position: relative; overflow: auto")
        div!= val.content